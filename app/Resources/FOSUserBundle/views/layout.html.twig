<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>TEDy - Connexion</title>
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style_enfant.css') }}">
    </head>
    <body {% block bodyclass %}{% endblock %}>
        <div class="container-fluid">
            <header class="row">
                <div class="bleu">
                    <img src="{{ asset('img/logo/logo150x150.png') }}" alt="logo" class="logo img-responsive" />
                </div>
                <div class="bleuclair {% block hidden %}{% endblock %}">
                </div>
            </header>

            {% block body %}{% endblock %}

            {% if app.request.hasPreviousSession %}
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="flash-{{ type }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}

            <div>
                {% block fos_user_content %}
                {% endblock fos_user_content %}
            </div>

        </div>
    </body>
</html>
