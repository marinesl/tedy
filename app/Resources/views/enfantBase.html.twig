<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>TEDy - {% block title %}{% endblock %}</title>
        <link rel="stylesheet" type="text/css" href="{{asset('css/bootstrap.min.css')}}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style_enfant.css') }}">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body {% block bodyclass %}{% endblock %}>
        <div class="container-fluid">
            <header class="row">
                <div class="bleu">
                    <img src="{{ asset('img/logo/logo150x150.png') }}" alt="logo" class="logo img-responsive" />
                </div>
                <div class="bleuclair {% block hidden %}{% endblock %}">
                </div>
            </header>

            {% block body %}{% endblock %}
        </div>

        <script type="text/javascript" src="{{asset('js/jquery-1.12.4.min.js')}}"></script>
        <script type="text/javascript" src="{{asset('js/bootstrap.min.js')}}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
