{% extends 'educateurBase.html.twig' %}

{% block body %}
<div class="row">
	<div class="col-md-2 col-sm-2 col-xs-2 user-present">
		{{user}}  |

		{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
				<a href="{{ path('fos_user_security_logout') }}">
						{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
				</a>
		{% endif %}
	</div>
</div>

{% if message is defined %}
  <div id="message">
    {{message}}
  </div>
{% endif %}

<div class="row">
	<h1 class="titre-page col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-12">
			Modifier vos informations
	</h1>
</div>

<div class="row">
	<div class="col-md-8 col-md-offset-2 form-modif">
    {{ form_start(form, {'attr': {'class': 'form-modif-enfant'}}) }}

    <div class="form-group">
      <div class="row">
        {{ form_label(form.username,"Identifiant", {'label_attr': {'class': 'col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-3 control-label form-required'}}) }}
        <div class="col-md-4 col-sm-4 col-xs-4">
          {{ form_widget(form.username, {'attr': {'class': 'form-control form-ajout-enfant-input', 'required' :'required'}}) }}
        </div>
      </div>

      <div class="row">
        {{ form_label(form.email,"E-mail", {'label_attr': {'class': 'col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-3 control-label form-required'}}) }}
        <div class="col-md-4 col-sm-4 col-xs-4">
          {{ form_widget(form.email, {'attr': {'class': 'form-control form-ajout-enfant-input', 'required' :'required'}}) }}
        </div>
      </div>

      <div class="row">
        {{ form_label(form.password,"Nouveau mot de passe", {'label_attr': {'class': 'col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-3 control-label', 'type': 'PasswordType'}}) }}
        <div class="col-md-4 col-sm-4 col-xs-4">
          {{ form_widget(form.password.first, {'attr': {'class': 'form-control form-ajout-enfant-input'}}) }}
        </div>
      </div>

      <div class="row">
        {{ form_label(form.password,"VÃ©rification du mot de passe", {'label_attr': {'class': 'col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-3 control-label', 'type': 'PasswordType'}}) }}
        <div class="col-md-4 col-sm-4 col-xs-4">
          {{ form_widget(form.password.second, {'attr': {'class': 'form-control form-ajout-enfant-input'}}) }}
        </div>
      </div>

      <div class="row">
          <div class="col-md-4 col-md-offset-5 col-sm-4 col-sm-offset-5 col-xs-4 form-ajout-enfant-bouton">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}, 'label': 'Enregistrer'}) }}
          </div>
      </div>
    {{ form_end(form) }}
  </div>
</div>
{% endblock %}
